@model List<asp.net_vidly.Models.Customer>

@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers List</h2>

@if (Model == null || !Model.Any())
{
    <p>No customers available at the moment.</p>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Subscribed to Newsletter</th>
                <th>Membership Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.Name</td>
                    <td>@customer.Email</td>
                    <td>@customer.PhoneNumber</td>
                    <td>@(customer.IsSubscribedToNewsLetter ? "Yes" : "No")</td>
                    <td>@(customer.MembershipType != null ? customer.MembershipType.Type : "N/A")</td>
                    <td>
                        <a href="@Url.Action("Details", "Customers", new { id = customer.CustomerId })" class="btn btn-primary btn-sm">
                            Details
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
